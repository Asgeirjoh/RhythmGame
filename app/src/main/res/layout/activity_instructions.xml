<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:text="@string/strInstructions"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/instrRndMode"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/initalButton"
            android:background="@color/grayStartColor"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/button1pnt"
            android:background="@color/orangeStartColor"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/button2pnt"
            android:background="@color/greenStartColor"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/button3pnt"
            android:background="@color/purpleStartColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/startxt"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/scorefont"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_star"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/scorefont"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="@string/hometxt"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:fontFamily="@font/scorefont"
            android:layout_margin="10dp"
            android:background="@drawable/ic_home"
            />








    </LinearLayout>

</LinearLayout>